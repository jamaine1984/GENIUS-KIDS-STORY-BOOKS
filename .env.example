# Kids Storybook Library - Environment Variables
# Copy this file to .env.local and fill in your API keys

# ===========================================
# SERVER-SIDE API KEYS (Cloud Functions)
# NEVER expose these in client code!
# ===========================================

# Anthropic API Key - For book text generation
# Get yours at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Google/Gemini API Key - For image and audio generation
# Get yours at: https://aistudio.google.com/
GEMINI_API_KEY=your-gemini-api-key-here

# ===========================================
# FIREBASE CONFIGURATION
# ===========================================

# Path to service account JSON file (for local development)
GOOGLE_APPLICATION_CREDENTIALS=./service-account.json

# Firebase project ID
FIREBASE_PROJECT_ID=your-project-id

# ===========================================
# CLIENT-SIDE CONFIGURATION (safe to expose)
# These are used in the web client
# ===========================================

VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abc123

# ===========================================
# BATCH GENERATION SETTINGS
# ===========================================

# Default voice for audio narration
DEFAULT_VOICE_NAME=Kore

# Concurrency limits (adjust based on API rate limits)
MAX_TEXT_CONCURRENCY=3
MAX_IMAGE_CONCURRENCY=2
MAX_AUDIO_CONCURRENCY=2
